{
  "name": "fullstack-prisma-app",
  "version": "1.0.0",
  "description": "Full CRUD app with Prisma, PostgreSQL, Node.js, and Vite",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cross-env NODE_ENV=development npm run dev --workspace=server",
    "client:dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "cross-env NODE_ENV=production npm run start --workspace=server",
    "db:push": "npm run db:push --workspace=server",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:studio": "npm run db:studio --workspace=server",
    "db:seed": "npm run db:seed --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0"
  }
}
